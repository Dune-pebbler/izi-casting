{
    "designLanguage": {
      "mood": "Clean, professional, and efficient - designed for content creators and media professionals.",
      "aesthetic": "Modern dashboard aesthetic with subtle colors, clean typography, and organized information hierarchy.",
      "keyPrinciples": [
        "Information clarity and scanability",
        "Consistent visual patterns",
        "Efficient workflow design",
        "Subtle use of color for status indication"
      ]
    },
    "globalStyles": {
      "colorPalette": {
        "primary": "#4FC3F7",
        "secondary": "#2196F3",
        "background": "#FAFAFA",
        "surface": "#FFFFFF",
        "textPrimary": "#212121",
        "textSecondary": "#757575",
        "success": "#4CAF50",
        "warning": "#FF9800",
        "error": "#F44336",
        "inactive": "#BDBDBD"
      },
      "typography": {
        "headingFont": {
          "fontFamily": "Inter, -apple-system, BlinkMacSystemFont, sans-serif",
          "fontWeight": 600
        },
        "bodyFont": {
          "fontFamily": "Inter, -apple-system, BlinkMacSystemFont, sans-serif",
          "fontWeight": 400
        }
      },
      "spacingSystem": {
        "baseUnit": 8,
        "description": "Uses a base unit of 8px for consistent spacing throughout the interface"
      },
      "commonStyles": {
        "borderRadius": "6px",
        "boxShadow": "0px 1px 3px rgba(0, 0, 0, 0.08)"
      }
    },
    "components": [
      {
        "componentName": "Sidebar Section",
        "description": "Collapsible sidebar sections for organizing different types of content and settings",
        "layout": {
          "display": "flex",
          "flexDirection": "column",
          "gap": "12px",
          "padding": "16px"
        },
        "appearance": {
          "backgroundColor": "#FFFFFF",
          "borderRight": {
            "width": 1,
            "style": "solid",
            "color": "#E0E0E0"
          }
        },
        "typography": {
          "sectionTitle": {
            "fontSize": 14,
            "fontWeight": 600,
            "color": "#212121"
          }
        }
      },
      {
        "componentName": "Content Row Item",
        "description": "Repeatable row component for displaying content items with metadata and actions",
        "layout": {
          "display": "flex",
          "alignItems": "center",
          "gap": "16px",
          "padding": "12px 16px",
          "minHeight": "56px"
        },
        "appearance": {
          "backgroundColor": "#FFFFFF",
          "border": {
            "bottom": {
              "width": 1,
              "style": "solid",
              "color": "#F0F0F0"
            }
          }
        },
        "states": {
          "default": {
            "backgroundColor": "#FFFFFF"
          },
          "hover": {
            "backgroundColor": "#F8F9FA"
          }
        }
      },
      {
        "componentName": "Status Badge",
        "description": "Circular status indicator showing active/inactive states",
        "appearance": {
          "width": "20px",
          "height": "20px",
          "borderRadius": "50%",
          "border": {
            "width": 2,
            "style": "solid"
          }
        },
        "states": {
          "active": {
            "backgroundColor": "#4CAF50",
            "borderColor": "#4CAF50"
          },
          "inactive": {
            "backgroundColor": "#BDBDBD",
            "borderColor": "#BDBDBD"
          }
        }
      },
      {
        "componentName": "Action Button",
        "description": "Small rounded buttons for various actions like expand, copy, etc.",
        "appearance": {
          "padding": "6px 12px",
          "borderRadius": "4px",
          "border": {
            "width": 1,
            "style": "solid",
            "color": "#E0E0E0"
          },
          "backgroundColor": "#FFFFFF"
        },
        "typography": {
          "fontSize": 12,
          "fontWeight": 400,
          "color": "#757575"
        },
        "states": {
          "default": {
            "backgroundColor": "#FFFFFF",
            "borderColor": "#E0E0E0"
          },
          "hover": {
            "backgroundColor": "#F5F5F5"
          }
        }
      },
      {
        "componentName": "Toggle Switch",
        "description": "Switch component for enabling/disabling features or content",
        "appearance": {
          "width": "40px",
          "height": "20px",
          "borderRadius": "10px",
          "border": "none"
        },
        "states": {
          "active": {
            "backgroundColor": "#4CAF50"
          },
          "inactive": {
            "backgroundColor": "#BDBDBD"
          }
        }
      },
      {
        "componentName": "Time Indicator",
        "description": "Small colored text elements showing time duration or timestamps",
        "typography": {
          "fontSize": 12,
          "fontWeight": 400
        },
        "states": {
          "recent": {
            "color": "#FF9800"
          },
          "old": {
            "color": "#757575"
          },
          "active": {
            "color": "#4CAF50"
          }
        }
      },
      {
        "componentName": "Input Field",
        "description": "Text input fields with subtle borders and clean styling",
        "appearance": {
          "padding": "8px 12px",
          "borderRadius": "4px",
          "border": {
            "width": 1,
            "style": "solid",
            "color": "#E0E0E0"
          },
          "backgroundColor": "#FFFFFF"
        },
        "typography": {
          "fontSize": 14,
          "fontWeight": 400,
          "color": "#212121"
        },
        "states": {
          "default": {
            "borderColor": "#E0E0E0"
          },
          "focus": {
            "borderColor": "#4FC3F7",
            "boxShadow": "0 0 0 2px rgba(79, 195, 247, 0.2)"
          }
        }
      },
      {
        "componentName": "Icon Button",
        "description": "Small circular buttons containing icons for quick actions",
        "appearance": {
          "width": "32px",
          "height": "32px",
          "borderRadius": "50%",
          "border": "none",
          "backgroundColor": "transparent"
        },
        "states": {
          "default": {
            "backgroundColor": "transparent",
            "color": "#757575"
          },
          "hover": {
            "backgroundColor": "#F5F5F5"
          },
          "active": {
            "backgroundColor": "#E3F2FD",
            "color": "#2196F3"
          }
        }
      }
    ]
  }